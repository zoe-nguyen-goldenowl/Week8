<div class="block">

    <div class = "errors">
        <% if @user.nil? %>
            
        <%else%>
            <% if @user.errors.any? %>
                <h1>Errors</h1>
                <ul>
                    <% @user.errors.full_messages.each do |m|%> 
                    <li> <%= m %> </li>
                    <% end %>
                </ul>
            <%end%>
        <%end%>
    </div>

    <%= form_for :user  do |f| %>
        <div class="login-show">
            <h2>LOG IN</h2>
            <%= f.text_field :name, placeholder: "Email" %><br>
            <%= f.password_field :password, placeholder: "password" %>
        </div>

        <div class="btn_log">
              <%= button 'Sig in', login %> 
        </div>
          
    <%end%>
</div>